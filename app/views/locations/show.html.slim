h1= @location.full_name

h3 
	' Menu
	.btn-group.float-xs-right data-toggle=:buttons
		- @location.day_parts.each do |day_part|
			label.btn.btn-outline-primary
				input type=:radio name=:day_part id=day_part autocomplete=:off = day_part.name


ul.nav.nav-tabs
	- @location.brand.order_types.each do |order_type|
		li.nav-item
			= link_to order_type.name, "##{order_type.name.parameterize}", data: {toggle: :tab}, role: :tab, class: 'nav-link'
.tab-content
	- @location.brand.order_types.each do |order_type|
		.tab-pane.fade id=order_type.name.parameterize role='tabpanel'
			table.table.table-inverse.table-hover
				tbody
					- @location.menu_items.each do |menu_item|
						tr
							td= menu_item.name
							td.text-xs-right
								/ TODO: helper
								- if menu_item.price == 0
									' on the house
								- else
									= number_to_currency menu_item.price


= link_to "back to #{@location.brand_name}", @location.brand
